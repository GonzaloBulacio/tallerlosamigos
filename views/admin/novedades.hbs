<!--Fila 1-->
<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{usuario}}! </span>
                <a href="/admin/login/logout" class="btn btn-danger">cerrar sesion <i
                        class="fas fa-sign-out-alt"></i></a>
            </p>

        </div>

    </div>


    <!--Fila 2-->
    <div class="row">

        <div class="col-6" style="margin-top: -9px;">
            <h2>Listado Novedades</h2>

        </div>
        <div class="col-3 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>

        </div>
        <div class="col-3">
            <form class="form-iniline my-2 my-lg-0" action="/admin/novedades" method="get">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="q" {{#if q}}value="{{q}}"{{/if}}>
            <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="fa fa-search"></i></button>
            
            </form>


        </div>

    </div>
    <!--Fin fila 2-->

    <!--Fila 3-->
    <div class="row">
        <div class="col">
            <table>
                <table class="table">
                    <thead>
                        <tr class="table-dark">
                            <th scope="col">#</th>
                            <th scope="col">Titulo</th>
                            <th scope="col">Imagen</th>
                            <th scope="col" class="text-end">Acciones</th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#each novedades}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{titulo}}</td>
                            <td>{{{imagen}}}</td>

                            <td class="text-end">
                                <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i
                                        class="fas fa-pencil-alt"></i></a>
                                <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i
                                        class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

        </div>
    </div>
{{#if is_search}}
{{#unless novedades.length}}
No se encontraron resultados para "<strong>{{q}}</strong>"
{{/unless}}
{{/if}}


</div>
